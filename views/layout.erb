	<body>

		<div id="container">
			<header>

			</header>
		
			<div id="jmpress">

				<div id="question">
					<h1>Hey.</h1>
					<h1>Pick some tags to populate the stream with.</h1>
					<h1>Don't use #s.</h1>
					<form id="tag" action="" method="GET">
						<input id="tag_input" type="text" class="default-value">
						<input type="submit" value="Go">
					</form>
				</div>

				<div class="step hidden" id="home" data-x="1000" data-y="0" data-rotate="0" data-scale="3">
					<div id="main" role="main">
						<%= yield %>

					</div>

				</div>
				<div class="step hidden" id="step-2" data-x="6000" data-y="0" data-z="0" data-rotate="0" data-scale="3">
					<div class="tagged">
						<div class="left_tag">
							<img class="poster" src="/poster1.jpg" />
						</div>
						<div class="right_tag">
							<img class="poster" src="/poster2.jpg" />
						</div>
					</div>
				</div>

				<div class="step hidden" id="step-3" data-x="6000" data-y="0" data-rotate-y="90" data-rotate="0" data-scale="3">
					<div class="tagged">
						<div class="left_tag">
							<div class="transperancy">
								<img src="/transperancy.png"/>
							</div>
							<div class="dyn_img">
							</div>
						</div>

						<div class="right_tag">
							<div class="transperancy">
								<img src="/transperancy.png"/>
							</div>
							<div class="dyn_img">
							</div>

						</div>
					</div>

				</div>


				<div class="step hidden" data-x="6000" data-y="-3000" data-rotate-y="90" data-scale="3">
					<div class="tagged">
						<div class="left_tag">
							<img class="poster" src="/poster3.jpg" />
						</div>
						<div class="right_tag">
							<div class="transperancy">
								<img src="/transperancy.png"/>
							</div>
							<div class="dyn_img">
							</div>

						</div>
					</div>

				</div>

		</div> <!--! end of #container -->

